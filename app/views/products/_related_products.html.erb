<div class="row">
  <div class="product-layout product-list col-xs-12">
    <% @related_products.each do |product| %>
    <div class="product-thumb">
      <div class="image">
        <%= link_to(( product.product_images.first ? image_tag(product.product_images.first.image.url(:thumb), :class => "img-responsive") : image_tag('')), category_path(@category))%>
      </div>
    </div>
    <% end %>
  </div>
</div>
